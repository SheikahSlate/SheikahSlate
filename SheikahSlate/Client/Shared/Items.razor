@using SheikahSlate.Shared.Model
@inject HttpClient Http

<h1>Items</h1>

<p>Debug Item Table</p>

@if (items is null)
{
    <p><em>Loading...</em></p>
}
else
{

    @foreach (Item item in items)
    {
        <img src="Images/@item.ImageFileName" @onmouseup="@(e => clickHandler(e, item))" oncontextmenu="return false;" width="32px" title="@item.ItemName"/>
        @if (item.Countable)
        {
            @item.Count
        }
        @if (item.HelpText is not null)
        {
            @item.HelpText
        }
        
    }
}

@code {
    private IEnumerable<Item> items;

    protected override async Task OnInitializedAsync()
    {
        items = await Http.GetFromJsonAsync<IEnumerable<Item>>("Items");
    }

    private void clickHandler(MouseEventArgs args, Item item) {
        if (args.Button == 0) {
            item.CurrentState++;
            return;
        }
            
        if (args.Button == 2) {
            item.CurrentState--;
            return;
        }
    }
}
